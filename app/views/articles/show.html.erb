<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>

<% if current_user %>
  <% if Like.exists?(article: @article, user: current_user) %>
    <%= link_to "Unlike", like_article_path(@article, type: "unlike"), method: :put, remote: true %>
  <% else %>
    <%= link_to "Like", like_article_path(@article, type: "like"), method: :put, remote: true %>
  <% end %>
<% end %>

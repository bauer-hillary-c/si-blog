<%= form_for :article, url: articles_path, html: { id: 'new_article' } do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.label :categories %>
    <%= f.collection_select(:categories, Category.all,
                                           { multiple: true, size: 5 }) %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<p>
  <%= link_to 'Back', articles_path %>
</p>
